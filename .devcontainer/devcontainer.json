{
	"name": "Mimir AI Development Container",
	// Use the Dockerfile in the project root
	"dockerFile": "../Dockerfile",
	"context": "..",
	// Dev container configuration
	"remoteUser": "mimir",
	"workspaceFolder": "/workspaces/mimir-ai",
	// Mounts for persistent data with proper ownership
	"mounts": [
		"source=mimir-chromadb-data,target=/workspaces/mimir-ai/data/chromadb,type=volume",
		"source=mimir-logs-data,target=/workspaces/mimir-ai/data/logs,type=volume",
		"source=mimir-uploads-data,target=/workspaces/mimir-ai/data/uploads,type=volume",
		"source=mimir-tmp-data,target=/workspaces/mimir-ai/data/tmp,type=volume",
		"source=mimir-face-images-data,target=/workspaces/mimir-ai/data/face_images,type=volume"
	],
	// Features to add to the dev container
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"configureZshAsDefaultShell": true,
			"username": "mimir"
		},
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "latest",
			"installBicep": false,
			"installUsingPython": false
		}
	},
	// Ports to forward for development
	"forwardPorts": [
		8000
	],
	"portsAttributes": {
		"8000": {
			"label": "Mimir AI",
			"onAutoForward": "notify"
		}
	},
	// Commands to run after container creation
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y jq && sudo chown -R mimir:mimir /workspaces/mimir-ai/data && chmod -R 755 /workspaces/mimir-ai/data && echo 'Development container ready! Configure your .env file and run: ./start.sh'",
	// VS Code customizations
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"bradlc.vscode-tailwindcss",
				"ms-vscode.vscode-json",
				"ms-python.pylint",
				"ms-python.mypy-type-checker"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.formatting.provider": "black",
				"python.linting.enabled": true,
				"python.linting.flake8Enabled": true,
				"python.linting.pylintEnabled": true,
				"python.analysis.typeCheckingMode": "basic",
				"editor.formatOnSave": true,
				"files.autoSave": "afterDelay",
				"editor.codeActionsOnSave": {
					"source.organizeImports": "explicit"
				},
				"python.analysis.autoImportCompletions": true,
				"python.terminal.activateEnvironment": false
			}
		}
	},
	// Environment variables for development
	"remoteEnv": {
		"ENVIRONMENT": "devcontainer",
		"APP_ENV": "development",
		"APP_HOST": "0.0.0.0",
		"APP_PORT": "8000",
		"DEBUG": "true",
		"AUTO_RELOAD": "true",
		"PYTHONPATH": "/workspaces/mimir-ai",
		"CHROMADB_LOC": "/workspaces/mimir-ai/data/chromadb",
		"USER_DATA_DIR": "/workspaces/mimir-ai/data",
		"UPLOAD_DIR": "/workspaces/mimir-ai/data/uploads",
		"TEMP_UPLOAD_DIR": "/workspaces/mimir-ai/data/tmp",
		"FACE_TEMP_DIR": "/workspaces/mimir-ai/data/face_images",
		"LOG_FILE": "/workspaces/mimir-ai/data/logs/mimir-ai.log",
		"LOG_LEVEL": "INFO",
		"CORS_ORIGINS": "http://localhost:8000",
		"L2_FACE_THRESHOLD": "0.85",
		"SESSION_VALIDITY_MINUTES": "1440",
		"MAX_FILE_SIZE": "50000000",
		"ALLOWED_FILE_TYPES": "application/pdf",
		"CHROMADB_ALLOW_RESET": "true"
	}
}